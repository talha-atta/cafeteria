{
  "name": "Cafeteria",
  "author": "Talha Atta",
  "short_name": "Cafeteria",
  "start_url": "/index.html",
  "description": "Turn any website into a chat",
  "permissions": ["activeTab", "storage", "declarativeContent"],
  "version": "1.0",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.min.js",
        "js/popup.js",
        "js/material.min.js",
        "js/main.js"
      ],
      "css": ["css/main.css", "css/material.min.css"],
      "matches": ["http://*/*"]
    }
  ],
  "manifest_version": 2
}
